@model BabyDev.Web.ViewModels.AddQuestionViewModel
<h3>Ask our experts</h3>
@using (Html.BeginForm("Ask", "Advice", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-8">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title", id = "ask-question-title" } })
        </div>
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", placeholder = "Content", id = "ask-question-body" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Ask question" class="btn btn-primary btn-lg" />
    </div>
}

